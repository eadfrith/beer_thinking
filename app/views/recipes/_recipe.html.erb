<li>
  <span class="recipe_code"><%= recipe.recipe_code %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(recipe.created_at) %> ago.
  </span>
  <% if current_user?(recipe.user) %>

    <%= link_to "Delete", recipe, method: :delete,
                                     data: { confirm: "Are you sure you want to delete this recipe?" },
                                     title: recipe.recipe_code %>

     
     <%# link_to "Show", recipe.user.recipe, method: :edit %>
       <li><%= link_to "Show", recipe %></li>                               
                                     
                                     
  <% end %>

</li>
