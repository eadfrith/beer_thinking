<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span3">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="span9">
       <% if current_user?(@user) %>
    <h3>My Brews (<%= @user.brews.count %>)</h3>
  <% else %>
    <h3><%= @user.name %>'s Brews (<%= @user.brews.count %>)</h3>
  <% end %>
  <% if @user.brews.count != 0 %>
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Brew Code</th>
          <th>Created at</th>
          <th>Based on Recipe</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @brews.each do |brew| %>
        <% @rec = Recipe.find(brew.recipe_id) %>
              <% @rec_code = @rec.recipe_code %>
          <tr>
              

            <td><%= link_to brew.brew_code, brew %></td>
            <td><%= brew.created_at %></td>
            <td><%= link_to @rec_code, @rec %></td>
              <% if current_user?(brew.user) %>
                <td>
                  <%= link_to 'Edit', edit_brew_path(brew), :class => 'btn btn-mini' %>
                  <%= link_to 'Delete', brew, method: :delete, confirm: 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
                </td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <% if current_user?(@user) %>
      <%= link_to 'Record New Brew', recipes_path, :class => 'btn btn-primary' %>
    <% end %>
    <% if current_user?(@user) %>
    <hr></hr>
      <h3>My Recipes (<%= @user.recipes.count %>)</h3>
    <% else %>
      <h3><%= @user.name %>'s Recipes (<%= @user.recipes.count %>)</h3>
    <% end %>
    <% if @user.recipes.count != 0 %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Recipe Code</th>
          <th>Created at</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @recipes.each do |recipe| %>
          <tr>
            
            <td><%= link_to recipe.recipe_code, recipe %></td>
            <td><%= recipe.created_at %></td>
              <% if current_user?(recipe.user) %>
                <td>
                  <%= link_to 'Edit', edit_recipe_path(recipe), :class => 'btn btn-mini' %>
                  <%= link_to 'Delete', recipe, method: :delete, confirm: 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
                </td>
              <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <% end %>
    <% if current_user?(@user) %>
      <%= link_to 'Create New Recipe', new_recipe_path, :class => 'btn btn-primary' %>
    <% end %>

  </div>
</div>
